# PROD environment variables (copy to .env.prod with real secrets)
FLASK_ENV=production
SECRET_KEY=change-me-prod
PORT=5000

# Database (Postgres)
POSTGRES_DB=bankdb
POSTGRES_USER=bankuser
POSTGRES_PASSWORD=bankpass

# SQLAlchemy URL inside containers
DATABASE_URL=postgresql+psycopg2://bankuser:bankpass@db:5432/bankdb

# Optional image coordinates if MODE=image
IMAGE_NAME=ghcr.io/example-org/fintech-test/bank-api
IMAGE_TAG=latest